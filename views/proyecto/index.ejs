<%- include("../template/cabecera",{tituloWeb:'Pagina de pacientes'})%>
    <!-- <h1 class="text-primary">Titulo del sitio: Index</h1>
    <h2> Paciente </h2> -->
    <div class="container">
        <h1>Pacientes</h1>
        <a class="btn btn-success btn-block my-4" href="/pacientes/crear">
            Crear nuevo paciente
        </a>    
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Fecha de nacimiento</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Consultas</th>
                    <th scope="col">Accion</th>
                </tr>  
            </thead>
            <tbody>
                <% if(arrayPacientes.length > 0){ %>
                    <% arrayPacientes.forEach(paciente => { %>
                        <tr>
                            <th scope="row"><%=paciente.id %></th>
                            <td><%=paciente.nombres %></td>
                            <td><%=paciente.apellidos %></td>
                            <td><%=paciente.fecha_de_nacimiento %></td>
                            <td><%=paciente.telefono %></td>
                            <td><%=paciente.direccion %></td>
                            <td><a href="/pacientes/consultas/<%=paciente.id%>" class="btn btn-primary btn-sm">
                                Revisar Consultas
                            </a></td>
                            <td>
                                <a href="/pacientes/<%=paciente.id%>" class="btn btn-warning btn-sm">
                                    Editar
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
    